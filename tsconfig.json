{
	"compilerOptions": {
		"target": "ES2022",
		"module": "es2022",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"types": [
			"node"
		],
		"lib": [
			"ES2020",
			"ES2022",
			"DOM",
			"esnext",
			"esnext.asynciterable",
			"esnext.disposable"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}