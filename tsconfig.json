{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020", // <-- ES модули
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	], // <-- точно указывает на файлы внутри src
	"exclude": [
		"node_modules",
		"dist"
	]
}